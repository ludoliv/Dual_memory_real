<% provide(:title,"Home") %>
<body onload="$('#myCarousel').carousel()">
<div class="bs-example">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Carousel indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>   
        <!-- Wrapper for carousel items -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="https://vignette.wikia.nocookie.net/date-a-live/images/7/7c/Charakurumi4_0.png/revision/latest?cb=20141024042045" alt="First Slide">
                <div class="carousel-caption d-none d-md-block">
                    <h3>image1</h3>
                    <p>image1</p>
                </div>
            </div>
            <div class="item">
                <img src="https://vignette.wikia.nocookie.net/date-a-live/images/7/7c/Charakurumi4_0.png/revision/latest?cb=20141024042045" alt="Second Slide">
                <div class="carousel-caption d-none d-md-block">
                        <h3>image2</h3>
                        <p>image2</p>
                </div>
            </div>
            <div class="item">
                <img src="https://vignette.wikia.nocookie.net/date-a-live/images/7/7c/Charakurumi4_0.png/revision/latest?cb=20141024042045" alt="Third Slide">
            </div>
        </div>
        <!-- Carousel controls -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
</div>
</body>